<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="xanderpost.entity">

    <class name="User"
           table="User">

        <id name="id">
            <generator class="native"/>
        </id>

        <property name="email" type="string" length="255"/>

        <property name="password" type="string" length="255"/>

        <list name="authorities" table="user_role" lazy="true">
            <key column="user_id" not-null="true"/>
            <list-index base="0"/>
            <many-to-many column="role_id" class="xanderpost.security.UserRole"/>
        </list>
    </class>

</hibernate-mapping>