<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="xanderpost.security">

    <class name="UserRole"
           table="UserRole">

        <id name="id" column="id">
            <generator class="native"/>
        </id>

        <property name="role" type="string" length="64" column="role"/>

        <many-to-one name="parent" class="UserRole" not-null="false" column="parent_id"/>

        <array name="childRoles" inverse="true">
            <one-to-many class="UserRole"/>
            <key column="parent_id"/>
        </array>
    </class>

</hibernate-mapping>